# ============================================
# SkyGuard-Scheduler Environment Variables
# ============================================
# Copy this file to .env and fill in your values
# DO NOT commit .env files to version control

# ============================================
# Backend Environment Variables
# ============================================
# Copy to: backend/.env

# Database
DATABASE_URL="postgresql://flight_user:flight_password@localhost:5432/flight_schedule_db"

# JWT Authentication
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"
JWT_EXPIRES_IN="24h"

# Server
PORT=3000
NODE_ENV="development"

# Weather API
OPENWEATHER_API_KEY="your-openweathermap-api-key"

# OpenAI API
OPENAI_API_KEY="your-openai-api-key"

# Email Configuration (SMTP)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"

# Demo Mode (set to true to use demo scenarios instead of real weather API)
DEMO_MODE=false

# ============================================
# Frontend Environment Variables
# ============================================
# Copy to: frontend/.env

VITE_API_URL=http://localhost:3000/api
